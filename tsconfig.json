{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "types": [
            "jest-playwright-preset",
            "expect-playwright",
            "jest"
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "experimentalDecorators": true,
    },
    "include": [
        "src",
        "example",
        "./*.ts",
        "./*.js",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
}